// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  surname   String?
  phone     String?
  sessions  Session[]
  accounts  Account[]
}

model Session {
  id         Int      @id @default(autoincrement())
  userId     Int
  sessionToken String  @unique
  expires    DateTime
  user       User     @relation(fields: [userId], references: [id])
}

model Account {
  id         Int    @id @default(autoincrement())
  userId     Int
  provider   String
  providerAccountId String
  user       User   @relation(fields: [userId], references: [id])
}
